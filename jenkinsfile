pipeline {
    agent any

    environment {
        IMAGE_NAME = "mytube-frontend"
        CONTAINER_NAME = "mytube-frontend-container"
        PORT = "8003"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/ChakriAmajala/yt.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t ${IMAGE_NAME} ."
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Stop old container if running
                    sh "docker rm -f ${CONTAINER_NAME} || true"
                    // Run new container
                    sh "docker run -d -p ${PORT}:80 --name ${CONTAINER_NAME} ${IMAGE_NAME}"
                }
            }
        }
    }

    post {
        success {
            echo "✅ Deployment Successful! Open http://<JENKINS_HOST>:${PORT}"
        }
        failure {
            echo "❌ Pipeline Failed!"
        }
    }
}
